# =============================================================================
# UFO Galaxy 64-Core MCP Matrix - Environment Configuration
# =============================================================================
# Copy this file to .env and fill in your values:
#   cp .env.example .env
# =============================================================================

# -----------------------------------------------------------------------------
# API Keys (Optional - for cloud model routing)
# -----------------------------------------------------------------------------

# OpenAI API Key (for GPT models)
OPENAI_API_KEY=

# Anthropic API Key (for Claude models)
ANTHROPIC_API_KEY=

# Google Gemini API Key
GEMINI_API_KEY=

# -----------------------------------------------------------------------------
# Local Model Configuration
# -----------------------------------------------------------------------------

# Ollama URL (if running locally)
OLLAMA_URL=http://host.containers.internal:11434

# Default local model
LOCAL_MODEL=llama2

# -----------------------------------------------------------------------------
# Hardware Configuration
# -----------------------------------------------------------------------------

# OctoPrint 3D Printer
OCTOPRINT_URL=http://localhost:5000
OCTOPRINT_API_KEY=

# Android ADB (usually auto-detected)
# ADB_DEVICE_SERIAL=

# -----------------------------------------------------------------------------
# System Configuration
# -----------------------------------------------------------------------------

# Log level: DEBUG, INFO, WARNING, ERROR
LOG_LEVEL=INFO

# Use mock drivers for testing (true/false)
USE_MOCK_DRIVERS=true

# -----------------------------------------------------------------------------
# Security
# -----------------------------------------------------------------------------

# HMAC secret for audit log signing (auto-generated if empty)
HMAC_SECRET=

# JWT secret for API authentication (if enabled)
JWT_SECRET=

# -----------------------------------------------------------------------------
# Performance Tuning
# -----------------------------------------------------------------------------

# Redis max memory
REDIS_MAX_MEMORY=256mb

# Worker threads per node
WORKER_THREADS=4

# Request timeout (seconds)
REQUEST_TIMEOUT=30
